{
  "name": "WalletMesh Packages",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/walletmesh-packages,type=bind,consistency=cached",
  "workspaceFolder": "/home/vscode/walletmesh-packages",
  "mounts": [
    {
      "target": "/home/vscode/.pnpm-store",
      "type": "volume"
    },
    {
      "target": "${containerWorkspaceFolder}/node_modules",
      "type": "volume"
    },
    {
      "source": "${localEnv:HOME}/.claude/",
      "target": "/home/vscode/.claude",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.claude.json",
      "target": "/home/vscode/.claude.json",
      "type": "bind"
    }
  ],
  "containerEnv": {
    "npm_config_store_dir": "/home/vscode/.pnpm-store"
  },
  "onCreateCommand": {
    "setup": "mount | egrep 'pnpm-store|node_modules' | awk '{print $3}' | sudo xargs chown `id -u`:`id -g` && pnpm install",
    "install-global-packages": "npm install -g @anthropic-ai/claude-code @informalsystems/quint && npm cache clean --force"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22",
      "pnpmVersion": "10.11.1"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "copyGitConfig": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "biomejs.biome",
        "vitest.explorer",
        "bierner.markdown-mermaid",
        "github.vscode-github-actions",
        "saoudrizwan.claude-dev",
        "rooveterinaryinc.roo-cline",
        "informal.quint-vscode",
        "ms-azuretools.vscode-containers"
      ],
      "dev.containers.mountWaylandSocket": false
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "echo 'source `code --locate-shell-integration-path bash`' >> ~/.bashrc"
}
