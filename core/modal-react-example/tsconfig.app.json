{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "paths": {
      "@walletmesh/modal-react": ["../modal-react/dist/index"],
      "@walletmesh/modal-react/*": ["../modal-react/dist/*"],
      "@walletmesh/modal-core": ["../modal-core/dist/index"],
      "@walletmesh/discovery": ["../discovery/dist/index"],
      "@walletmesh/jsonrpc": ["../jsonrpc/dist/index"]
    },
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
