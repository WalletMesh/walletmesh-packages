{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": []
  },
  "include": [
    "src/**/*",
    "src/declaration.d.ts", "src/index.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}
