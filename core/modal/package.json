{
  "name": "@walletmesh/modal",
  "version": "0.0.2",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WalletMesh/walletmesh-packages.git"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json && pnpm copy-assets",
    "copy-assets": "cpx \"src/**/*.module.css\" dist/",
    "clean": "rimraf dist node_modules",
    "type-check": "tsc --noEmit",
    "skip-test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "docs": "typedoc",
    "preversion": "pnpm test",
    "version": "pnpm clean && pnpm build && pnpm run docs && git add docs/"
  },
  "sideEffects": false,
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "lucide-react": "^0.475.0",
    "react-hot-toast": "^2.5.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "biome": "^0.3.3",
    "cpx": "^1.5.0",
    "rimraf": "^6.0.1",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
