{
  "name": "@walletmesh/modal",
  "version": "0.0.7",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles": "./dist/**/*.module.css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WalletMesh/walletmesh-packages.git"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json && pnpm copy-assets",
    "copy-assets": "cpx \"src/**/*.module.css\" dist/",
    "clean": "rimraf dist node_modules",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "docs": "typedoc",
    "preversion": "pnpm test",
    "version": "pnpm clean && pnpm build && pnpm run docs && git add docs/"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-visually-hidden": "^1.1.2",
    "lucide-react": "^0.475.0",
    "react-hot-toast": "^2.5.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "biome": "^0.3.3",
    "cpx": "^1.5.0",
    "happy-dom": "^13.3.8",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
