{
  "name": "@walletmesh/modal-core",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./chains": {
      "types": "./dist/chains/index.d.ts",
      "import": "./dist/chains/index.js"
    },
    "./selectors": {
      "types": "./dist/api/selectors.d.ts",
      "import": "./dist/api/selectors.js"
    },
    "./ssr": {
      "types": "./dist/api/ssr.d.ts",
      "import": "./dist/api/ssr.js"
    },
    "./providers/aztec": {
      "types": "./dist/providers/aztec/index.d.ts",
      "import": "./dist/providers/aztec/index.js"
    },
    "./providers/aztec/lazy": {
      "types": "./dist/providers/aztec/lazy.d.ts",
      "import": "./dist/providers/aztec/lazy.js"
    },
    "./providers/evm": {
      "types": "./dist/providers/evm.d.ts",
      "import": "./dist/providers/evm.js"
    },
    "./providers/evm/lazy": {
      "types": "./dist/providers/evm/lazy.d.ts",
      "import": "./dist/providers/evm/lazy.js"
    },
    "./providers/solana": {
      "types": "./dist/providers/solana/index.d.ts",
      "import": "./dist/providers/solana/index.js"
    },
    "./providers/solana/lazy": {
      "types": "./dist/providers/solana/lazy.d.ts",
      "import": "./dist/providers/solana/lazy.js"
    },
    "./providers/nemi-account": {
      "types": "./dist/api/providers/nemi-account.d.ts",
      "import": "./dist/api/providers/nemi-account.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./development": {
      "types": "./dist/development/index.d.ts",
      "import": "./dist/development/index.js"
    },
    "./internal": {
      "types": "./dist/internal/index.d.ts",
      "import": "./dist/internal/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WalletMesh/walletmesh-packages.git"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rimraf dist node_modules tsconfig.build.tsbuildinfo tsconfig.tsbuildinfo",
    "clean:build": "rimraf dist tsconfig.build.tsbuildinfo tsconfig.tsbuildinfo",
    "rebuild": "pnpm clean:build && pnpm build",
    "type-check": "tsc --noEmit",
    "type-check:build": "tsc --noEmit -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "biome lint src/ --max-diagnostics=50",
    "lint:fix": "biome lint src/ --write --max-diagnostics=50",
    "format": "biome format src/",
    "format:fix": "biome format src/ --write",
    "docs": "typedoc",
    "preversion": "pnpm test",
    "version": "pnpm clean:build && pnpm build && pnpm run docs && git add docs/"
  },
  "dependencies": {
    "@tanstack/query-core": "^5.89.0",
    "@walletmesh/discovery": "workspace:*",
    "@walletmesh/jsonrpc": "workspace:*",
    "immer": "^10.1.3",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "optionalDependencies": {
    "@walletmesh/aztec-rpc-wallet": "workspace:*"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.322",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "2.1.8",
    "glob": "^10.4.5",
    "happy-dom": "^17.6.3",
    "vitest": "2.1.8"
  },
  "peerDependencies": {
    "@nemi-fi/wallet-sdk": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@nemi-fi/wallet-sdk": {
      "optional": true
    }
  },
  "files": ["dist"]
}
