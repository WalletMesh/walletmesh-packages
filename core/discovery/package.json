{
  "name": "@walletmesh/discovery",
  "version": "0.1.2",
  "description": "Generic Cross-Blockchain Wallet Discovery Protocol",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./initiator": {
      "types": "./dist/initiator/index.d.ts",
      "import": "./dist/initiator/index.js"
    },
    "./responder": {
      "types": "./dist/responder/index.d.ts",
      "import": "./dist/responder/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./extension": {
      "types": "./dist/extension.d.ts",
      "import": "./dist/extension.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WalletMesh/walletmesh-packages.git"
  },
  "bugs": {
    "url": "https://github.com/WalletMesh/walletmesh-packages/issues"
  },
  "homepage": "https://github.com/WalletMesh/walletmesh-packages#readme",
  "license": "Apache-2.0",
  "keywords": [
    "wallet",
    "discovery",
    "blockchain",
    "web3",
    "capability-first",
    "development"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "clean": "rimraf dist node_modules",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "docs": "typedoc",
    "preversion": "pnpm test",
    "version": "pnpm clean && pnpm build && pnpm run docs"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.4",
    "happy-dom": "^18.0.1",
    "rimraf": "^6.0.1",
    "typedoc": "^0.28.12",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2"
  }
}
