{
  "name": "walletmesh-packages",
  "description": "WalletMesh Core Monorepo",
  "private": true,
  "type": "module",
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WalletMesh/walletmesh-packages.git"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "@cypress/request"
    ]
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "coverage": "pnpm -r run coverage",
    "type-check": "pnpm -r run type-check",
    "verify": "pnpm lint && pnpm type-check && pnpm test",
    "docs": "pnpm -r run docs",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile && pnpm run --filter \"[HEAD]\" docs",
    "publish": "changeset publish",
    "clean": "pnpm -r run clean",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "create-package": "bash create-package.sh",
    "update-aztec-deps": "tsx scripts/update-aztec-deps.ts"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.4",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.15.17",
    "@vitest/coverage-v8": "^3.1.3",
    "glob": "^11.0.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typedoc": "^0.28.4",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
