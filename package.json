{
  "name": "walletmesh-packages",
  "description": "WalletMesh Core Monorepo",
  "private": true,
  "type": "module",
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WalletMesh/walletmesh-packages.git"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "coverage": "pnpm -r run coverage",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile && pnpm run --filter \"[HEAD]\" docs",
    "publish": "changeset publish",
    "clean": "pnpm -r run clean",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "format": "biome format",
    "format:fix": "biome format --write",
    "create-package": "bash create-package.sh"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.12",
    "@types/node": "^22.13.1",
    "@vitest/coverage-v8": "^3.0.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typedoc": "^0.27.6",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
